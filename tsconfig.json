{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "types": ["vite/client"]
  },
  "typeRoots": [
    "./node_modules/@types",
    "./node_modules/rollup/dist"
  ],
  "include": [
    "dist/Timecentric/UI/**/*.ts",
    "dist/Timecentric/UI/**/*.d.ts",
    "dist/Timecentric/UI/**/*.vue",
    "src/Timecentric/UI/**/*.ts",
    "src/Timecentric/UI/**/*.d.ts",
    "src/Timecentric/UI/**/*.vue"
  ],
  "exclude": [
    "node_modules/vite/dist/node/index.d.ts",
    "node_modules/rollup/dist/parseAst.d.ts"
  ],
  "skipLibCheck": true
}

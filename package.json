{
  "name": "timecentric",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "setup": "composer install && npm i && npm run certificates && npm run dev:php:build",
    "certificates": "./generate-certs.sh",
    "dev": "npm run dev:php & npm run dev:spa",
    "dev:php": "composer dump-autoload && docker-compose -f docker-compose.dev.yml down && docker-compose -f docker-compose.dev.yml up",
    "dev:php:build": "composer dump-autoload && docker-compose -f docker-compose.dev.yml down && docker-compose -f docker-compose.dev.yml up --build -d",
    "dev:spa": "gulp --gulpfile ./gulp/gulpfile.js watch",
    "logs:php": "docker-compose -f docker-compose.dev.yml logs -f php",
    "logs:nginx": "docker-compose -f docker-compose.dev.yml logs -f nginx",
    "lint": "npm run lint:php && npm run lint:js",
    "format": "npm run format:php && npm run format:js",
    "lint:php": "composer run lint",
    "format:php": "composer run format",
    "lint:js": "eslint --ext .js,.ts,.vue src/",
    "format:js": "prettier --write \"src/**/*.{js,ts,vue}\"",
    "build:spa": "vite build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^22.15.22",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "del": "^8.0.0",
    "eslint": "^9.27.0",
    "eslint-plugin-vue": "^10.1.0",
    "gulp": "^5.0.1",
    "gulp-cli": "^3.1.0",
    "gulp-sass": "^6.0.1",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "rollup": "^4.44.1",
    "sass": "^1.89.2",
    "through2": "^4.0.2",
    "typescript": "^5.4.0",
    "vite": "^7.0.0",
    "vue": "^3.4.0",
    "vue-eslint-parser": "^10.1.3"
  },
  "dependencies": {
    "vue-router": "^4.5.1"
  }
}

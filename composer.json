{
  "name": "guillerming/guacamole",
  "description": "Modern php strict typed non-opinionated framework",
  "type": "project",
  "require": {
    "vlucas/phpdotenv": "^5.6"
  },
  "scripts": {
    "format": "PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer fix --allow-risky=yes --config=.php-cs-fixer.dist.php",
    "lint": "vendor/bin/phpstan analyse --level=max src"
  },
  "config": {
    "process-timeout": 0
  },
  "autoload": {
    "psr-4": {
      "Guacamole\\": [
        "src/Guacamole/",
        "dist/Guacamole/"
      ],
      "Site\\": [
        "src/Site/",
        "dist/Site/"
      ]
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.75",
    "phpstan/phpstan": "^2.1"
  }
}
